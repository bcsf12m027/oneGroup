<div style="margin-top:70px;">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="panel panel-default col-sm-6" style="margin-top: 40px;">

            <div class="panel-heading">
                <h3 style="text-align:center;">Sign Up</h3>
            </div>

            <div class="panel-body" style="padding-bottom:20px;">
                <form method="post" class="form-horizontal ">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" placeholder="Name" class="form-control" id="name" name="n" />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" placeholder="Email" class="form-control" id="email" name="n" />
                    </div>

                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" placeholder="Username" class="form-control" id="username" name="n" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" placeholder="Password" id="password" class="form-control" name="a" />
                    </div>
                    <div class="form-group">
                        <label for="repassword">Re-Enter Password</label>
                        <input type="password" placeholder="Re-Enter Password" id="repassword" class="form-control" name="a" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary col-sm-3">Sign Up</button>
                </form>
            </div>

        </div>
    </div>
</div>