@{
    ViewBag.Title = "Sign Up";
}
@model EAD_Project.Models.teacher


@section signupPage
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>

        $(document).ready(function () {

            $("#name").blur(function () {
                f1();
            });

      
                function f1() {

                var username = $("#name").val();

                $.getJSON("/Home/isSameUserName?un=" + username, function (retValue) {



                    if (retValue) {

                        $('#name').val(null);
                        $("#info").html("Username already exists.");
                        $("#info").show();

                    }

                });

                }


                $.dobPicker({
                    daySelector: '#dobday', /* Required */
                    monthSelector: '#dobmonth', /* Required */
                    yearSelector: '#dobyear', /* Required */
                    dayDefault: 'Day', /* Optional */
                    monthDefault: 'Month', /* Optional */
                    yearDefault: 'Year', /* Optional */
                    minimumAge: 0, /* Optional */
                    maximumAge: 100 /* Optional */
                });
        });
    </script>




}

<div style="margin-top:70px;">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="panel panel-default col-sm-6" style="margin-top: 40px;">

            <div class="panel-heading">
                <h3 style="text-align:center;">Sign Up</h3>
            </div>

            <div class="panel-body" style="padding-bottom:20px;">
                <form method="post" class="form-horizontal " action="/Home/addTeacherinDB">

                    <div class="form-group">
                        <label for="name">Username</label>
                        <input type="text" placeholder="Username" class="form-control" id="name" name="username" required />
                        <p class="pull-right" role="alert" style="color:red" id="info" hidden="hidden"></p>
                    </div>


                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" placeholder="Password" id="password" class="form-control" name="password" required />
                    </div>

                    <div class="form-group">
                        <label >Date of Birth</label>
                       
                        <table style="width:100%">
                            <tr>
                                <td sytle="width:280px"><select id="dobday" class="form-control"></select></td>
                                <td><select id="dobmonth" class="form-control"></select></td>
                                <td><select id="dobyear" class="form-control "></select></td>
                            </tr>
                        </table>
                       

                       
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" placeholder="Email" class="form-control" id="email" name="email" required />
                    </div>


                    <br />
                    <button type="submit" class="btn btn-primary col-sm-3">Sign Up</button>

                    <div class="container pull-right">
                        <b>Already have an account?</b>   @Html.ActionLink("Login Here", "Login", "Home")
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>